<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context=".Fragments.Museo_imabite">

    <ImageView
        android:id="@+id/fig1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/museoimabite3"
        app:layout_constraintBottom_toBottomOf="@+id/glAbFoto"
        app:layout_constraintLeft_toLeftOf="@id/glIzqFoto"
        app:layout_constraintRight_toRightOf="@id/glDerFoto"
        app:layout_constraintTop_toTopOf="@+id/glAFoto" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toTopOf="@id/glAbLogo"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="@id/glIzqLogo"
        app:layout_constraintRight_toRightOf="@id/glDerLogo"
        app:layout_constraintTop_toTopOf="@+id/glALogo"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contenedor"
        android:src="@drawable/forma_imagen"
        app:layout_constraintBottom_toBottomOf="@+id/glAbContenedor"
        app:layout_constraintLeft_toLeftOf="@id/glIzqContenedor"
        app:layout_constraintRight_toRightOf="@id/glDerContenedor"
        app:layout_constraintTop_toTopOf="@+id/glAContenedor"/>

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="0dp"
