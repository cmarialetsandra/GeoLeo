        app:layout_constraintTop_toTopOf="@id/glATitulo"
        app:layout_constraintBottom_toBottomOf="@id/glAbTitulo"
        app:layout_constraintRight_toRightOf="@+id/glDerLogo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/lblAnioFund"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lblAnioFund"
        app:layout_constraintLeft_toLeftOf="@id/glIzqTitulos"
        app:layout_constraintBottom_toBottomOf="@id/l"
        app:layout_constraintTop_toTopOf="@id/glATitulos"
        app:layout_constraintRight_toRightOf="@+id/glDerTitulos"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/lblAnioFundInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lblMIAnioFund"
        app:layout_constraintLeft_toLeftOf="@id/glDerTitulos"
        app:layout_constraintBottom_toBottomOf="@id/l"
        app:layout_constraintTop_toTopOf="@id/glATitulos"
        app:layout_constraintRight_toRightOf="@+id/glDerInfo"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="@color/lightPrimary"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/lblFundador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lblFundador"
        app:layout_constraintLeft_toLeftOf="@id/glIzqTitulos"
        app:layout_constraintTop_toTopOf="@id/l"
        app:layout_constraintBottom_toBottomOf="@id/glAbFundador"
        app:layout_constraintRight_toRightOf="@+id/glDerTitulos"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/lblFundadorInfo"
        android:layout_width="0dp"
